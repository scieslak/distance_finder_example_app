<% animation_speed = 0.3 %>

<style media="screen">

@keyframes pulse {
  0% {
    transform: scale(.1);
    background-color: rgba(242, 255, 0, 1);
  }
  100% {
    transform: scale(1);
    background-color: #aad400;
  }
}

#overlay {
  position: fixed;
  background-color: white;
  width: 100%;
  height: 100%;
}

#preloader {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.dot {
  transform: scale(.1);
  animation: pulse <%= "#{animation_speed}s" %> alternate infinite ease-out;
  display: inline-block;
  background-color: rgba(242, 255, 0, 0);
  width: 20px;
  height: 20px;
  border-radius: 100%;
}

.delay1x {
  animation-delay: <%= "#{animation_speed/3}s" %>;
}
.delay2x {
  animation-delay: <%= "#{animation_speed/3*2}s" %>;
}



</style>
