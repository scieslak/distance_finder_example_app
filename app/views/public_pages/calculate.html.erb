<% if @calculator.status == "OK" %>
  <div class="row" id="result-container">
    <div class="small-offset-1 small-10 columns">

      <div class="row">
        <div class="medium-5 columns">
          <p><%= @calculator.start_address %></p>
        </div>
        <div class=" medium-2 columns">
          &#8646;
        </div>
        <div class="medium-5 columns">
          <p><%= @calculator.end_address %></p>
        </div>
      </div>

      <div class="row">
        <div class="medium-6 columns">
          <div class="card">
            <p>Distance:<br><%= @calculator.distance %></p>
          </div>
        </div>
        <div class="medium-6 columns">
          <div class="card">
            <p>Duration:<br><%= @calculator.duration %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="small-1 columns"></div>
  </div>

<% else %>
  <p>status: <%= @calculator.status %> </p>
<% end %>
